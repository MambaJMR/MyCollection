<div class="container-fluid">
    <form method="post" asp-controller="CustomCollection" asp-action="UpdateCollection" enctype="multipart/form-data">
        <label>Name</label>
        <input type="text" class="form-control w-25 mt-2" required placeholder="Collection name" name="name"/>
        <label>Description</label>
        <input type="text" class="form-control w-25 mt-2" required placeholder="Description" name="description"/>
        <select id="typeCollection" class="form-select w-25 mt-2" required name="typeCollection">
            <option value="Book">Book</option>
            <option value="Movies">Movies</option>
            <option value="Games">Games</option>
            <option value="Foods">Foods</option>
        </select>
        <div>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </div>
    </form>
</div>
