@model List<ItransitionMVC.Models.ElasticModel>



@* @{
    ViewData["Title"] = "Title";
} *@


<div class="row">
    @if (Model.Count() > 0)
    {
        <div class="text-center col-12 row m-3">
            <h1 class="col-11 text-center">
                "Search"
            </h1>
        </div>
        <div class="container">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="col-2">
                            <div class="">"Item"</div>
                        </th>
                        <th scope="col" class="col-2">
                            <div class="">"Collection"</div>
                        </th>
                        <th scope="col">
                            <div class="">"Tags"</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <a class="btn btn-primary" asp-controller="Home" asp-action="ItemView" asp-route-id="@item.ItemId">@item.NameItem</a>
                            </th>
                            <th>
                                <a class="btn btn-primary" asp-controller="Home" asp-action="CustomCollectionItems" asp-route-id="@item.CollectionId">@item.NameCollection</a>
                            </th>
                            <td class="align-middle">
                                @if (item.Tags != null)
                                {
                                    @foreach (var tag in item.Tags)
                                    {
                                        <p>@tag</p>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center col-12 row m-3">
            <h1 class="col-11 text-center">
                "Nothing"
            </h1>
        </div>
    }
</div>