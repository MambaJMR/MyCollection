@model ItransitionMVC.ModelViews.RegisterViewModel
<div class="container-fluid">
    <h2>Register</h2>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email" class="form-label w-25"></label><br />
            <input asp-for="Email" class="form-control w-25" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password" class="form-label w-25"></label><br />
            <input asp-for="Password" class="form-control w-25" />

        </div>
        <div>
            <label asp-for="PasswordConfirm" class="form-label w-25"></label><br />
            <input asp-for="PasswordConfirm" class="form-control w-25" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-primary m-2" value="Register" />
        </div>
    </form>
</div>