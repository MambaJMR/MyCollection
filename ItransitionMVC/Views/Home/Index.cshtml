@model List<CustomCollection>

@{
    ViewData["Title"] = "Home Page";
    
}
<a type="button" class="btn btn-success" asp-controller="CustomCollection" asp-action="Collections" asp-route-userid="@User.Identity.Name">My colletions</a>
    <table class="container table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Type Collection</th>
                <th scope="col">Description</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <div class="card" style="width: 10rem;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="...">
                    </div>
                </td>
                <td>
                        @item.typeCollection
                </td>
                <td>
                        @item.Description
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="CustomCollection" asp-action="ItemsCollection" asp-route-id="@item.Id">@item.Name</a>
                </td>
            </tr>
        }
            
        </tbody>
    </table>
@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Выход" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}